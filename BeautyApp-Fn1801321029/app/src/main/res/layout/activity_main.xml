<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#5E68CD"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="731dp"
        android:layout_margin="20dp"
        android:background="#95869F"
        android:orientation="vertical"
        app:layout_goneMarginTop="220dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#95869F"
            android:fontFamily="cursive"
            android:gravity="center"
            android:text="@string/beauty_app"
            android:textColor="#FD150202"
            android:textSize="36sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="232dp"
            android:contentDescription="@string/todo"
            app:srcCompat="@drawable/monarch_orange_butterfly_bright_summer_flowers_background_blue_foliage_fairy_garden_macro_artistic_image_monarch_167030287" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="#95869F"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">


            <ImageView
                android:id="@+id/note"
                android:layout_width="79dp"
                android:layout_height="72dp"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="50dp"
                android:contentDescription="@string/todo"
                app:srcCompat="@drawable/class_notes_pngrepo_com" />

            <ImageView
                android:id="@+id/gallery"
                android:layout_width="105dp"
                android:layout_height="72dp"
                android:layout_marginTop="50dp"
                android:contentDescription="@string/todo"
                app:srcCompat="@drawable/gallery_icon_png_images_vector_and_psd_files_free_download_on_gallery_icon_png_512_512" />

            <ImageView
                android:id="@+id/designer"
                android:layout_width="101dp"
                android:layout_height="74dp"
                android:layout_marginTop="50dp"
                android:contentDescription="@string/todo"
                app:srcCompat="@drawable/search_contacts" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_weight="1"
            android:background="#95869F"
            android:text="      Notes      Gallery    Designer"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="450dp" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>